  "overrides": {
    "glob": "^9.3.5",
    "rimraf": "^5.0.5",
    "eslint": "^8.56.0",
    "striptags": "^3.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
